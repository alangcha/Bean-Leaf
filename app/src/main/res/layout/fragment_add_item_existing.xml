<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="30sp">
                </TextView>

                <EditText
                    android:id="@+id/additemexisting_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Green Tea"
                    android:textSize="30sp">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price: "
                    android:textSize="30sp">
                </TextView>

                <EditText
                    android:id="@+id/additemexisting_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="4.25"
                    android:textSize="30sp">
                </EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Caffeine (mg): "
                    android:textSize="30sp">
                </TextView>

                <EditText
                    android:id="@+id/additemexisting_item_caffeine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="100"
                    android:textSize="30sp">
                </EditText>

            </LinearLayout>

            <ImageView
                android:id="@+id/additemexisting_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/matcha_latte">
            </ImageView>

            <Button
                android:id="@+id/additemexisting_add_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Image">
            </Button>

            <Button
                android:id="@+id/additemexisting_add_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Item"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp">
            </Button>


        </LinearLayout>


    </ScrollView>

</LinearLayout>