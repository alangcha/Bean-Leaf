<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp">


                    <TextView
                        android:id="@+id/profile_greetings"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Hello, Ethan Fridley :-) !"
                        android:textSize="30dp"
                        android:layout_marginTop="50dp">
                    </TextView>


                    <TextView
                        android:id="@+id/profile_email_label"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:text="Email"
                        android:textSize="30dp"
                        android:layout_marginTop="50dp">
                    </TextView>

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:text="fridley@usc.edu"
                        android:textSize="20dp">
                    </TextView>

                    <EditText
                        android:id="@+id/profile_email_edit"
                        android:visibility="gone"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:text="fridley@usc.edu"
                        android:textSize="20dp">
                    </EditText>

                    <TextView
                        android:id="@+id/profile_password_label"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:text="Password"
                        android:textSize="30dp"
                        android:layout_marginTop="30dp">
                    </TextView>

                    <TextView
                        android:id="@+id/profile_password"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:text="1234asdf"
                        android:textSize="20dp">
                    </TextView>

                    <EditText
                        android:id="@+id/profile_password_edit"
                        android:visibility="gone"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:text="fridley@usc.edu"
                        android:textSize="20dp">
                    </EditText>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp">

                        <TextView
                            android:id="@+id/profile_my_shops_label"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:text="My Shops"
                            android:textSize="30dp">
                        </TextView>

                    </LinearLayout>




                    <view
                        android:id="@+id/myshops_recycle_view"
                        class="androidx.recyclerview.widget.RecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scrollbars="vertical"
                        android:layout_marginTop="10dp" />

                    <Button
                        android:id="@+id/add_shop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Add Shop">
                    </Button>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:srcCompat="@drawable/ic_edit_black_24dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnDoneProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            app:elevation="6dp"
            app:pressedTranslationZ="12dp"
            app:srcCompat="@drawable/ic_done_black_24dp" />
        
        <TextView
            android:id="@+id/profile_invalid_email"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:visibility="invisible"
            android:text="Invalid email"
            android:textColor="#FF0000"
            android:layout_marginTop="205dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp">
        </TextView>

        <TextView
            android:id="@+id/profile_invalid_password"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:visibility="invisible"
            android:text="Invalid password"
            android:textColor="#FF0000"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="334dp"
            android:layout_marginEnd="20dp">
        </TextView>


    </RelativeLayout>


</LinearLayout>
